:javascript
  function resizeIframe(obj) {
    obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
  }
#listicle-show
  = @listicle.get_intro.html_safe
  - @listicle.questions.sort_by(&:score).reverse.each do |question|
    .voting
      = link_to answer_listicle_question_path(question_id: question.id, is_up: true), method: :post, class: 'vote' do
        %i.fa.fa-chevron-up.fa-2x
      - score = question.score
      - if score > 0
        .score= score
      - else
        .score.negative= score.abs
      = link_to answer_listicle_question_path(question_id: question.id, is_up: false), method: :post, class: 'vote' do
        %i.fa.fa-chevron-down.fa-2x
    .item-content
      = h question.body.html_safe
    %br
    %hr
  - if @listicle.footer.present?
    = @listicle.footer.html_safe