#footer
  - question_url = question_sharing_url(uuid: @survey.questions.first.uuid, subdomain: 'a')
  - facebook_url = "https://facebook.com/sharer.php?#{{u: question_url}.to_query}"
  - twitter_url = "https://twitter.com/intent/tweet?#{{text: "Check this out! #{question_url}"}.to_query}"

  %a.logo{href: 'http://www.statisfy.co/'}
  - question = @response.present? ? @response.question : @question
  - if question.present?
    %span.answers-count
      = pluralize @question.response_count, 'answer'

  %a.action-icon.tumblr{href: 'javascript:openTumblr()'}
  %a.action-icon.facebook{href: facebook_url, target: 'popup'}
  %a.action-icon.twitter{href: twitter_url, target: 'popup'}
  %a.action-icon.embed#embed-icon{href: '#embed'}
  %a.action-icon.create{href: "#{ENV['WEB_APP_URL']}/#/app/questions/new"}
:javascript
  var tumblrOverlay = $('#tumblr-overlay');
  function openTumblr() {
    if (tumblrOverlay.css('display') === 'none') {
      tumblrOverlay.css('display', 'initial');
    } else {
      tumblrOverlay.css('display', 'none');
    }

  }
