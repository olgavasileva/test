:sass
  .comment
    border-bottom-color: #357ebd
    border-bottom-style: solid
    border-bottom-width: 1px
    background-color: white
    padding: 30px
    padding-left: 80px
    position: relative
    font-size: 1.3rem

    .avatar
      border-radius: 50%
      border-style: solid
      border-color: #cccc99
      width: 60px
      height: 60px
      left: 10px
      top: 30px
      position: absolute
    .user_name
      font-weight: bold
      font-size: 1.1em
      color:  #357ebd
    .posted_date
      font-size: 0.8em
      color:  gray
-question.responses_with_comments.all.each do |c|
  .comment
    .avatar
    %span.user_name
      =c.user.username
    %span.posted_date
      =c.created_at.to_formatted_s(:long)
    %p=c.comment