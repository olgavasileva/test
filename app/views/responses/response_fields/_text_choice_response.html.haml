:sass
  .selectable-option
    text-align: center
    display: block
    overflow: hidden
    background: none!important
    clear: both!important
    float: none!important
    padding: 0 !important


    label
      display: block
      position: relative
      cursor: pointer

    input
      position: absolute
      bottom: 100%
      margin-bottom: 3px

    img
      visibility: hidden
      width: 90% !important

    .option-title
      font-size: 1.4em
      position: absolute
      width: 100%
      text-align: center
      top: 50%
      margin-top: -0.7em
      left: 0
    &.active
      label.btn-primary
        background-color: #2b59a2

    &:last-child
      label
        margin-bottom: 0!important
  .equalizer-md
    margin-bottom: 3%
  .equalizer-sm
    margin-bottom: 1.3%

  .follow-menu
    margin-top: -65px
    background-color: transparent

  input[type]:checked~i.glyphicon.glyphicon-ok.selected
    display: block


  i.glyphicon.glyphicon-ok.selected
    font-size: 1.8em
    position: absolute
    right: 25px
    top: 15px
    color: white
    background-color: rgba(0,0,0,0.3)
    padding: 5px
    padding-left: 15px
    padding-right: 15px
    border: solid 1px white
    display: none

.row.text-choices.form-group
  .col-sm-12.col-md-10.col-md-push-1
    .col-sm-6.col-xs-12
      = responsive_image_tag((response.question.web_image_url || image_path("fallback/choice1.png")), class: "img-responsive")
      .floating-question-title
        %span= response.question.title
      %div
        .col-xs-12
          = render "responses/response_fields/shared/sharing", form:form, response:response
    .col-sm-6.col-xs-12.btn-group{:data=>{:toggle=>"buttons"}}
      -cols=(12/response.question.choices.length)+1
      -pc_margin=(10/(response.question.choices.length-1)).to_s+'%'
      %div.equalizer-sm.hidden-lg
      %div.equalizer-md.hidden-lg.hidden-sm
      = form.collection_radio_buttons :choice_id, response.question.choices, :id, :title, label:false, wrapper:false, boolean_style: 'inline', item_wrapper_class:"col-xs-12 selectable-option btn"  do |c|
        %label.btn-primary.col-xs-12{style:"margin-bottom:#{pc_margin};"}
          .row
            %div{:class=>["col-xs-3 col-sm-#{cols}"]}
              = responsive_image_tag((response.question.web_image_url || image_path("fallback/choice1.png")), class: "img-responsive")
          .option-title=c.object.title
          = c.radio_button label:false, boolean_style: 'inline', wrapper:false
          %i.glyphicon.glyphicon-ok.selected

  .col-sm-12.col-md-10.col-md-push-1
    .form-group
      .col-sm-6.col-xs-12
        = render "responses/response_fields/shared/comment", form:form, response:response
      .col-xs-12.col-sm-6.form-group
        = render "responses/response_fields/shared/anonymous", form:form, response:response
    .col-sm-12
      = render "responses/response_fields/shared/submit", form:form, response:response