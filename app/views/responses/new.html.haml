:sass
  .panel-title
    text-align: center
%div
  .col-xs-12.col-sm-10.col-sm-push-1
    .panel.panel-default
      .panel-heading
        .panel-title
          .row
            .col-xs-3.col-sm-2
              =link_to root_path do
                %span.glyphicon.glyphicon-chevron-left
            .col-xs-6.col-sm-8
            .col-xs-3.col-sm-2
              =link_to root_path do
                %span.glyphicon.glyphicon-chevron-right
      .panel-body.response
        .row
          = simple_form_for [:question, setup_response(@response)] do |form|
            = form.association :question, as: :hidden
            = form.association :user, as: :hidden
            = form.input :type, as: :hidden
            = render "response_fields", form:form, response:@response
