.panel.panel-default
  .panel-body
    = @contest.gallery_heading_html.html_safe
    %h2= link_to "Enter the contest!", contest_sign_up_path(@contest.uuid)

.panel.panel-default
  .panel-heading
    %h2.panel-title Vote for your favorite scene
  .panel-body
    .row#studio_responses
      - @studio_responses.each do |r|
        .col-sm-3{style:"height: 303px;"}
          =link_to save_vote_path(@contest.uuid, r.id), method: :post, class: :thumbnail, remote: true do
            =image_tag(r.scene.image.thumb.url)
            #score{data:{id:r.id}}=number_to_percentage @contest.percent_votes_for_response(r), precision: 0
