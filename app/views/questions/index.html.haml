#undertop.container
  #portfolio
    .container
      .row
        .col-md-12
          #filters_container
      .row
        .col-md-12
          #gallery_container
            #question-modal.modal.question.fade.modal-blur{role: :dialog, style: "display: none;", tabindex: "-1"}
              .modal-dialog.modal-md
                .modal-content
            - @questions.each do |question|
              .photo{class: question.category.name.parameterize.underscore.to_sym}
                = responsive_image_tag question.image.web.url || question.category.image.web.url, class: "img-responsive"
                = link_to question_path(question), remote:true, class: :mask do
                  %h3=question.title
                  .icon
                    =responsive_image_tag question.category.icon.web.url
                    %small=question.category.name

