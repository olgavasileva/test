%img.blured-background{src: "http://wallown.com/wp-content/uploads/2014/06/cool_backgrounds_mac_apple.jpg"}
.row#content_constraint
  .col-xs-12.col-sm-8.col-sm-push-2.img-overlay
    .panel.panel-default
      .panel-heading
        .panel-title
          .row
            .col-xs-6.col-xs-push-3.col-sm-8.col-sm-push-2
              Response Summary
            - if @next_question
              .col-xs-3.col-sm-2
                = link_to new_question_response_path(@next_question) do
                  %span.glyphicon.glyphicon-chevron-right
      .panel-body.summary
        .row.response
          .col-xs-12
            =render 'response_fields', question:@question
        .row
          .col-xs-12
            =render '/widgets/tc_summary_tabs/tc_summary_tabs', locals:{User: User, question: @question}