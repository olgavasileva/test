:sass
  .selectable-option
    text-align: center
    display: block
    overflow: hidden
    background: none!important
    clear: both!important
    float: none!important
    padding: 0 !important

    label
      display: block
      position: relative
      cursor: pointer

    input
      position: absolute
      bottom: 100%
      margin-bottom: 3px

    img
      visibility: hidden
      width: 90% !important

    .option-title
      font-size: 1.4em
      position: absolute
      width: 100%
      text-align: center
      top: 50%
      margin-top: -0.7em
      left: 0
    &.active
      label.btn-primary
        background-color: #2b59a2

    &:last-child
      label
        margin-bottom: 0!important
  .equalizer-md
    margin-bottom: 3%
  .equalizer-sm
    margin-bottom: 1.3%

  .follow-menu
    margin-top: -65px
    background-color: transparent

  .response_counter
    text-align: right
    font-size: 1.3em
    width: 4em
    position: absolute
    right: 10px
    top: 10px
    color: white
    background-color: rgba(0,0,0,0.3)
    padding-left: 10px
    padding-right: 10px
    border: solid 1px white

.row.text-choices.form-group
  .col-md-4.col-md-push-2.col-sm-6.col-xs-12
    = responsive_image_tag((question.web_image_url || image_path("fallback/choice1.png")), class: "img-responsive")
    .floating-question-title
      %span= question.title
    %div
      .col-xs-12
        -#= render "responses/response_fields/shared/sharing", form:form, response:response
  .col-xs-12.col-sm-6.col-md-4.col-md-push-2.btn-group{:data=>{:toggle=>"buttons"}}
    -cols=(12/question.choices.length)+1
    -pc_margin=(10/(question.choices.length-1)).to_s+'%'
    %div.equalizer-sm.hidden-lg
    %div.equalizer-md.hidden-lg.hidden-sm
    -question.choices.all.each do |c|
      .col-xs-12.selectable-option.btn
        %label.btn-primary.col-xs-12{style:"margin-bottom:#{pc_margin};"}
          .row
            %div{:class=>["col-xs-4 col-sm-4 col-md-#{cols}"]}
              = responsive_image_tag((question.web_image_url || image_path("fallback/choice1.png")), class: "img-responsive")
          .option-title=c.title
          -divNumber=(@question.response_count>0) ? @question.response_count : 1
          %i.response_counter
            =Integer((((@responses_resume[c.id]||0)/Float(divNumber))*100.00).round())
            \%

-#.row.form-group
  .col-sm-6.col-md-4.col-md-push-2
    = render "responses/response_fields/shared/comment", form:form, response:response
  .col-sm-6.col-md-4.col-md-push-2
    = render "responses/response_fields/shared/anonymous", form:form, response:response
-#.row
  .col-md-8.col-md-push-2
    = render "responses/response_fields/shared/submit", form:form, response:response