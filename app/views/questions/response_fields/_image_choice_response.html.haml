:sass
  .choice-wrapper
    &.col-md-6
      margin: 0

      overflow: hidden
      cursor: pointer
    .img-responsive
      margin: auto

    .response_counter
      text-align: right
      font-size: 1.3em
      width: 4em
      position: absolute
      right: 10px
      top: 10px
      color: white
      background-color: rgba(0,0,0,0.3)
      padding-left: 10px
      padding-right: 10px
      border: solid 1px white
    .option-title
      position: absolute
      bottom: 0
      text-align: center
      color: white
      background-color: rgba(0,0,0,0.3)
      left: 0
      right: 0
      padding-top: 8px
      padding-bottom: 8px



%div
  .col-xs-12.col-sm-10.col-sm-push-1.col-md-8.col-md-push-2
    = render "questions/response_fields/shared/title", question: @question
    .form-group
      -n=0
      -@question.choices.each do |c|
        -n+=1
        %label.col-sm-6.col-xs-12.choice-wrapper
          .row
            =responsive_image_tag((c.web_image_url || image_path("fallback/choice#{n}.png")), class: "img-responsive")
            -divNumber=(@question.response_count>0) ? @question.response_count : 1
            %i.response_counter
              =Integer((((@responses_resume[c.id]||0)/Float(divNumber))*100.00).round())
              \%
          .option-title
            =c.title
  .col-xs-12.col-sm-10.col-sm-push-1.col-md-8.col-md-push-2
    .form-group
      = render "questions/response_fields/shared/sharing",question: @question
