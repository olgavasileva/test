:sass
  .choice-wrapper
    &.col-md-6
      margin: 0

      overflow: hidden
      cursor: pointer
    .img-responsive
      margin: auto

    input[type]:checked~i.glyphicon.glyphicon-ok.selected
      display: block


    i.glyphicon.glyphicon-ok.selected
      font-size: 1.8em
      position: absolute
      right: 25px
      top: 15px
      color: white
      background-color: rgba(0,0,0,0.3)
      padding: 5px
      padding-left: 15px
      padding-right: 15px
      border: solid 1px white
      display: none

    .option-title
      position: absolute
      bottom: 0
      text-align: center
      color: white
      background-color: rgba(0,0,0,0.3)
      left: 0
      right: 0
      padding-top: 8px
      padding-bottom: 8px

    &.selected-choice
      i.glyphicon.glyphicon-ok.selected
        display: block

    input[type]
      position: absolute
      top: -110%

%div
  .col-xs-12
    = render "questions/response_fields/shared/title", question: @question
    .form-group
      -n=0
      -@question.choices.each do |c|
        -n+=1
        %label.col-xs-6.choice-wrapper
          .row
            =responsive_image_tag((c.web_image_url || image_path("fallback/choice#{n}.png")), class: "img-responsive")
            -divNumber=(@question.response_count>0) ? @question.response_count : 1
            %i.response_counter
              =Integer((((@responses_resume[c.id]||0)/Float(divNumber))*100.00).round())
              \%
          .option-title
            =c.title
  .col-xs-12
    .form-group
      = render "questions/response_fields/shared/sharing",question: @question, style_type: "negative"
