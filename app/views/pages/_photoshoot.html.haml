:sass
  .invert-float
    float: right

  #canvas-row
    margin-left: -15px !important
    margin-right: -15px !important

  .sticker-container
    img
      max-height: auto!important
      height: auto!important
      width: 100%!important

  #nutrition_facts_wrapper
    font-size: 1.5rem
    background-color: white
    h3#nutrition-facts
      font-size: 2em
      font-weight: bold
      margin: 0
      padding-top: 5px
    h4
      font-size: 1.1em
      font-weight: normal
    h5
      font-weight: bold
      display: inline
      padding: 0
      margin: 0


    table
      width: 100%
      tr
        td
          font-size: 1em
          word-break: keep-all
          white-space: nowrap
          box-sizing: border-box
          padding-top: 5px !important
          padding-bottom: 5px !important
          &:last-child
            width: 3em
            text-align: right
            &:not(:first-child)
              display: none
          .regular-text
            padding-left: 10px

          h5, .regular-text
            display: block
            position: relative
            .nutrition-value
              position: absolute
              top: 0
              right: 0

      &:last-child
        tr:last-child
          border-bottom-width: 10px

    .nutrition-info
      font-size: 1em
      border-bottom: 1px solid black
  .facts_percent_header.nutrition-info
    text-align: right

  .pack-browser-control
    color: cyan!important
  #asset-title
    .dropdown
      .fa.fa-chevron-down
        color: white
        font-size: 1.1em
        background-color: darkcyan
        padding: 3px
        padding-top: 1px
        margin-top: -4px
        height: 1.6em
        line-height: 1.6em
        vertical-align: middle
        border-radius: 5px



#photoshootinfo.hidden{data:{studio_id:@response.question.studio.id, studio_name:@response.question.studio.display_name || @response.question.studio.name, logged_in:user_signed_in?, question_id:@response.question.id}}
- if @scene.present?
  #sceneinfo.hidden{data:{stickers:@scene.stickers, scene_id:@scene.id, scene_user_id:@scene.user_id, share_link:@scene.share_link('link', current_user)}}

%section#studio-wrapper
  .row
    .col-sm-3.invert-float#nutrition_facts_wrapper
      %h3#nutrition-facts Nutrition Facts
      %h4
        Serving Size
        %span#serving_instructions
          1/4 cup dry(39g)
        %br
        Servings per container varies
      %table
        %tr
          %th{:colspan=>2}
            Amount Per Serving
        %tr.nutrition-info
          %td
            Calories
            %span.nutrition-value
              %span#calorie-counter 0
          %td
            Calories from fat
            %span.nutrition-value
              %span#calories-from-fat
                10
      .facts_percent_header.nutrition-info
        \%Daily Value*
      %table
        %tr.nutrition-info
          %td
            %h5
              Total fat
              %span.nutrition-value
                %span#total-fat
                  0
                g
          %td
            %span.nutrition-value
              %span#percent-fat
                0
            \%
        %tr.nutrition-info
          %td
            .regular-text
              Saturated fat
              %span.nutrition-value
                %span#sat-fat
                  0
                g
          %td
            %span.nutrition-value
              %span#percent-sat-fat
                0
            \%
        %tr.nutrition-info
          %td
            %h5
              Cholesterol
              %span.nutrition-value
                %span#cholesterol-counter
                  0
                mg
          %td
            %span.nutrition-value
              %span#percent-cholesterol-counter
                0
            \%
        %tr.nutrition-info
          %td
            %h5
              Sodium
              %span.nutrition-value
                %span#sodium-counter
                  0
                g
          %td
            %span.nutrition-value
              %span#percent-sodium-counter
                0
            \%
        %tr.nutrition-info
          %td
            %h5
              Total carbohydrate
              %span.nutrition-value
                %span#carbohydrates-counter
                  0
                g
          %td
            %span.nutrition-value
              %span#percent-carbohydrates-counter
                0
            \%
        %tr.nutrition-info
          %td
            .regular-text
              Dietary fiber
              %span.nutrition-value
                %span#fiber-counter
                  0
                g
          %td
            %span.nutrition-value
              %span#percent-fiber-counter
                0
            \%
        %tr.nutrition-info
          %td
            .regular-text
              Sugars
              %span.nutrition-value
                %span#sugar-counter
                  0
                g
          %td
        %tr.nutrition-info
          %td
            %h5
              Protein
              %span.nutrition-value
                %span#protein-counter
                  0
                g
          %td
    #ps-breadcrumbs.col-sm-9
      #current-studio-icon
      %h2#current-studio-name
      =link_to "", '#', id: "ps-save", data:{'btn-role' => :save}
      =link_to "Clear All", '#', id: "ps-clear-all", class: %w(btn btn-gary-dark ps-btn-gray)
      .ps-undo-redo
        %button#ps-undo.btn.btn-gary-dark.ps-btn-gray.ps-btn-disabled{data:{"btn-role" => :undo}}
          %i.fa.fa-undo
          &nbsp;Undo
        %button#ps-redo.btn.btn-gary-dark.ps-btn-gray.ps-btn-disabled{data:{"btn-role" => :redo}}
          %i.fa.fa-repeat
          &nbsp;Redo
      =link_to '?', '#', id:"ps-help", data:{"btn-role" => "help"}, class: %w(btn btn-gary-dark btn-circle btn-sm ps-btn-gray)
      .help
    .col-sm-9
      .row#canvas-row
        #pack-drawer.col-sm-4.inactive.drawer-control-right.drawer
          %aside#asset-wrapper
            .row
              %header#title-bar.col-sm-12
                .row
                  #asset-title.col-sm-12
                    =link_to 'javascript:void(0);', class: %w(pack-browser-control prev-pack pull-left col-sm-2 col-pull-8) do
                      %i.fa.fa-chevron-left
                    =link_to 'javascript:void(0);', class: %w(title col-sm-8 col-push-2 dropdown) do
                      %span.title-text All Packs
                      %span.icon-stack.dropdown-icon{data:{toggle: :dropdown}}
                        %i.fa.fa-sign-blank.fa-stack-base
                        %i.fa.fa-chevron-down.fa-light
                      %ul.pack-dropdown-list.dropdown-menu{role: :menu}
                        %li#browse-packs-drop Browse
                        %li#all-packs-drop See All
                    =link_to 'javascript:void(0);', class: %w(pack-browser-control next-pack pull-right col-sm-2) do
                      %i.fa.fa-chevron-right
            #pack-wrapper.row.is-scrollable
          .drawer-handle
            %span.glyphicon.glyphicon-chevron-right
            %span.glyphicon.glyphicon-chevron-left
          .help
        #ps-desktop
          %canvas#ps-canvas
- # UI templates / Hidden stuff

.ps-ui#ps-ui-templates{data:{"no-turbolink" => true}}

  #welcome-dialog{title: "Welcome to the Photo Shoot"}
    %h1
    %p
      %span
    %p
      %button.ps-btn-yellow
    %br

  #flaunt-dialog{title: "Flaunt Your Style!"}
    .ps-dlg-col
      %div
      =link_to '#' do
        Enter this
        %br
        Week's Contest
    .ps-dlg-col
      %div
      =link_to '#' do
        Set as
        %br
        Avatar
    .ps-dlg-col
      %div
      =link_to '#' do
        Share with
        %br
        Friends

  #thanku-dialog{title:"Your design looks fab!"}
    - if current_user
      %p.lead Your design was saved to your Photo Gallery!

    #post-save-container.container
      .row
        .col-sm-4
          .ps-dlg-col-img= link_to "javascript:psUI().share();", image_tag( image_url('photoshoot/icon_share_toFriends.png'))
          =link_to "javascript:psUI().share();", "Share with Friends"

  = render 'shared/shared_modal'

  #enter-contest-dialog{title:"Confirm your contest entry!"}

    %p=link_to "#", "Enter Contest", id:"ps-enter-contest-save", data:{"btn-role" => "submit to contest"}, class: %w(btn ps-btn-yellow)
    %p=link_to '#', "No, I'm not ready just yet.", id:"ps-not-ready"

  #avatar-dialog{title:"Set as Avatar"}
    %strong Instructions:
    choose save when you're done cropping!
    .ps-avatar-header
      %button.ps-btn-gray Cancel
      %button.ps-btn-yellow Save
    .ps-avatar-image

  #jsondata-dialog{title:"JSON data representation"}
    %textarea{style: "width: 554px; height: 400px; font: normal 12px monospace;"}
    .center
      %button.ps-btn-yellow Set

  #clear-scene-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type: :button, data:{dismiss: :modal}}
            %span{aria_hidden:true} &times;
            %span.sr-only Close
          %h4.modal-title Clear Your Scene?
        .modal-body
          %p
            Are you sure you want to clear your
            %br
            scene and start from scratch?
        .modal-footer
          %button.btn.btn-default{type: :button, data:{dismiss: :modal}} Cancel
          %button.btn.btn-primary#clear-all{type: :button, data:{dismiss: :modal, "btn-role" => "clear all"}} Clear

= render 'pages/sticker_packs'
= render 'pages/sticker_pack_details'
