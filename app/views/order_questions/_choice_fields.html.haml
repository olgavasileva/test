.col-xs-12.nested-fields.answer
  .question.imagechooser
    .hidden
      .canned{data:{ids:canned_order_choice_image_ids, urls:canned_order_choice_image_web_urls}}
      .id=f.input :background_image_id, as: :hidden
    .bgimage= responsive_image_tag f.object.web_image_url, class: "img-responsive"
    =link_to_remove_association f, class: :close do
      %i.glyphicon.glyphicon-remove
    .over_image_title_container
      =render partial:'/widgets/image_control',locals:{f:f,distro: :upload_middle,type: 'order_choice'}
      .col-xs-12.title=f.input :title, label: false, input_html:{class: 'revealable remove-default-text'}
