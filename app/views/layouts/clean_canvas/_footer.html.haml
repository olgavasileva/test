%footer#footer
  .container
    .row
      .recent-questions.col-md-4
        %h2 Recent Questions
        - @canned_recent_questions.each do |q|
          .row
            .col-md-2.thumb= image_tag q[:image_url]
            .col-md-10 
              .date= q[:date].strftime("%a, %d %b")
              .title= q[:title]
              %br
      .col-md-4
        %h2 Contact
        #inquiry= render "inquiries/form"
      .nav.col-md-4
        %h2 More
        = render_navigation context: :footer
