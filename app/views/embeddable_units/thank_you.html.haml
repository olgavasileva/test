:sass
  .content
    background-image: url("#{@embeddable_unit.survey.questions.last.web_image_url}")

- if ENV['GOOGLE_ANALYTICS_ID'].present?
  - content_for :script do
    :javascript
      ga('send', 'event', 'embeddable', 'end', "#{@embeddable_unit.survey.try(:id) || @embeddable_unit.id}", 3);

.thank-you
  .content
    .close=link_to image_tag("embed/close-cross.png"), embeddable_unit_start_survey_path(@embeddable_unit.uuid), target: "_self"
    .overlay
      .top= @embeddable_unit.thank_you_html.html_safe
      .bottom
        %p More fun questions at Statisfy
        =link_to image_tag("embed/download-app.png"), ENV['APP_STORE_LINK']
  .footer
    .share
    .logo
