= simple_form_for [:user, :segment, setup_response_matcher(@response_matcher)], remote:true do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title=@response_matcher.question.title
    .panel-body
      = f.input :type, as: :hidden
      = f.association :segment, as: :hidden
      = f.association :question, as: :hidden
      = render "response_matcher_fields", f:f
      =f.submit "Add", class: %w(btn btn-success)