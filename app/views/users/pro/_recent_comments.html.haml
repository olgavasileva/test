#comments.panel.panel-warning
  .panel-heading
    %span.panel-title
      %i.panel-title-icon.fa.fa-fire.text-danger>
      Recent Comments
    .panel-heading-controls
      .panel-heading-text
        =paginate @recent_responses_with_comments, remote: true

  .widget-comments.panel-body.tab-content-padding
    .panel-padding.no-padding-vr
      - @recent_responses_with_comments.each do |r|
        .comment
          =gravatar_for r.user.email, class: %w(comment-avatar)
          .comment-body
            .comment-by
              =r.user.username
              commented on
              =link_to r.question.title, [r.question], title: ""
            .comment-text= r.comment
            .comment-actions
              =link_to '#' do
                %i.fa.fa-pencil>
                Edit
              =link_to '#' do
                %i.fa.fa-times>
                Remove
              %span.pull-right
                =time_ago_in_words r.created_at
                ago
