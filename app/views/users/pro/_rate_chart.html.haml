- percent = rate.present? ? (rate * 100).round : 0
- label = rate.present? ? (number_to_percentage rate * 100, precision:0) : "N/A"
.stat-panel.text-center
  .stat-row
    .stat-cell.bg-dark-gray.padding-sm.text-xs.text-semibold
      %i.fa.fa-globe>
      \&nbsp;&nbsp;#{title}
  .stat-row
    .stat-cell.bordered.no-border-t.no-padding-hr
      #easy-pie-chart-1.pie-chart{"data-percent" => percent}
        .pie-chart-label=label
