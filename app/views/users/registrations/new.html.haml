- if session[:demo]
  =render "demo_new"
- else
  #sign_up2
    .container
      .section_header
        %h3
      .row.login
        .col-sm-6.col-sm-push-3.signin_box
          .box
            .box_cont
              .form
                = form_for resource, as: resource_name, url: registration_path(resource_name), class: "form-inline" do |f|
                  = devise_error_messages!
                  .form-group.w-icon
                    = f.text_field :username, placeholder: "Username", class:%w{form-control input-lg}
                  .form-group.w-icon
                    = f.email_field :email, placeholder: "E-mail", class:%w{form-control input-lg}
                  .form-group.w-icon
                    = f.password_field :password, autocomplete: "off", placeholder: "Password", class:%w{form-control input-lg}
                  .form-group.w-icon
                    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repeat Password", class:%w{form-control input-lg}
                  .forgot
                    %span Already have an account?
                    = link_to "Sign In", new_user_session_path
                  .form-group.w-icon
                    = f.submit "sign up"

