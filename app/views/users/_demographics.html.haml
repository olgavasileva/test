.panel.panel-default
  .panel-heading
    %h2.panel-title
      %i.menu-icon.fa.fa-bar-chart-o
      %span.mm-text
        - if demographics[:choice]
          - if demographics[:choice].title.present?
            Demographics for #{demographics[:choice].title} (Choice ID #{demographics[:choice].id})
          - else
            Demographics for Choice ID #{demographics[:choice].id}
        - else
          Demographics for all choices
  .panel-body
    - colors = %w(#1794C0 #183A7B #8A2357 #D1B32D #A84F12 #577638 #5D268F #125FAA)
    - %w(GENDER AGE CHILDREN INCOME ETHNICITY EDUCATION POLITICALAFFILIATION POLITICALENGAGEMENT).each_with_index do |id, idx|
      -# MALEAGE FEMALEAGE
      - info = demographics[id]
      - if info
        .col-md-12.hidden-sm.hidden-xs.text-right Largest Group and Index

        .col-md-6=info[:name]
        .col-md-6.hidden-sm.hidden-xs.text-right=info[:largest_bucket][:name]
        .col-md-6.hidden-md.hidden-lg
          %i Largest Group and Index:
          #{info[:largest_bucket][:name]}

        .col-md-6=render "users/index_chart", info: info, color: colors[idx]
        .col-md-6=render "users/percentage_chart", info: info
