#dashboard
  %ul.breadcrumb.breadcrumb-page
    .breadcrumb-label.text-light-gray You are here:
    %li=link_to "Home", root_path
    %li.active=link_to "Dashboard", '#'

  = render 'users/dashboard/header'
  = form_for :days_ago, method: 'GET' do |f|
    = label_tag :days_ago
    = select_tag :days_ago, options_for_select([7, 14, 30], @days_ago)
    = submit_tag :apply, class: 'btn btn-labeled btn-success'
  .row
    .col-md-4.panel
      = render partial: 'users/dashboard/publisher/behavioural_panel', locals: {report: @report[:behavioural]}
    .col-md-4.panel
      = render partial: 'users/dashboard/publisher/emotional_panel', locals: {report: @report[:emotional]}
  .row
    .col-md-4.panel
      = render partial: 'users/dashboard/publisher/cognitive_panel', locals: {report: @report[:cognitive]}
    #recent_responses.col-md-6{data:{lazy:recent_responses_user_path(@user)}} Loading...
  %hr.no-grid-gutter-h.grid-gutter-margin-b.no-margin-t/