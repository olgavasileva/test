.tab-content.following-tab-content
  = form_tag user_path(@user), method: 'get' do
    = hidden_field_tag(:tab, 'following')
    = text_field_tag(:search_text, params[:search_text], placeholder: "Find people...", class: 'form-control')
  %ul.items
    - @leaders.each do |leader|
      %li
        = gravatar_for leader.email, default: :identicon, size: 30
        = link_to leader.name, leader
        - if @user == current_user
          = link_to "Unfollow", unfollow_user_path(leader), class: "btn btn-sm btn-default pull-right"
  .center
    = will_paginate @leaders
