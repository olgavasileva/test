.tab-content.notifications-tab-content
  %ul.items
    - @notifications.each do |notification|
      %li
        - if notification.isQuestionUpdated? || notification.isQuestionTargeted?
          = link_to notification.body, question_path(notification.question)
        - unless notification.read?
          .pull-right
            .badge.badge-warning New
  .center
    = will_paginate @notifications
